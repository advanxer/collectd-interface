<% 

lines = String.new
areas = String.new
cores = `grep -c processor /proc/cpuinfo`.to_i
limit = cores*100

if cores > 1
  cores = "#{cores} cores"
else
  cores = "#{cores} core"
end

def define(name,files,function = "AVERAGE")
  defs = String.new
  cdef = "CDEF:#{name}="
  tail = String.new
  cpu  = 1
  files.each do |f|
    n = "#{name}_#{cpu}"
    defs << %Q[DEF:#{n}=#{f}:value:#{function} ] 
    cdef << "#{n},"
    tail << "+,"
    cpu += 1
  end
  return defs << cdef << tail.chop.chop.chop << ' '
end

